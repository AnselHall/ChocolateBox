<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.laibatour.chocolatebox.activity.SearchActivity">

    <RelativeLayout
        android:id="@+id/search_title_rl"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/search_iv"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/calendar_left_arrow_enable" />

        <ImageView
            android:id="@+id/search_icon_iv"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_search" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dp"
            android:layout_toLeftOf="@id/search_icon_iv"
            android:layout_toRightOf="@id/search_iv"
            android:background="@color/gray_white"
            android:gravity="center_vertical"
            android:hint="Great Wall"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColorHighlight="@color/fab_stroke_top_outer_color"
            android:textSize="18sp" />
    </RelativeLayout>

    <View
        android:id="@+id/search_divide"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/search_title_rl"
        android:background="@color/dark_black" />
</RelativeLayout>
