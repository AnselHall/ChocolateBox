<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.laibatour.chocolatebox.base.BasePager">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >

        <TextView
            android:id="@+id/base_title_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:drawableLeft="@drawable/calendar_left_arrow_enable" />

        <TextView
            android:id="@+id/base_title_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Laibatour"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/base_title_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:src="@drawable/product_icon_share" />

        <ImageView
            android:id="@+id/base_title_fav"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/base_title_share"
            android:visibility="gone"
            android:src="@drawable/product_icon_fav_no" />

    </RelativeLayout>

</LinearLayout>
